# Production Environment Variables
# Copy this file to .env and fill in your values

# Image Registry
IMAGE_REGISTRY=your-registry.com
VERSION=v1.0.0

# Database
DATABASE_URL=postgresql://user:password@prod-db:5432/specgen_prod

# Authentication
JWT_SECRET=your-production-jwt-secret-here

# Redis
REDIS_URL=redis://prod-redis:6379

# Ingress
INGRESS_HOST=spec-gen.com

# Load Balancer
LOAD_BALANCER_IP=your-load-balancer-ip

# SSL/TLS
TLS_CERT_PATH=/etc/ssl/certs/spec-gen.crt
TLS_KEY_PATH=/etc/ssl/private/spec-gen.key

# Monitoring
PROMETHEUS_ENABLED=true
GRAFANA_ENABLED=true
LOKI_ENABLED=true

# Logging
LOG_LEVEL=info

# Autoscaling
API_MIN_REPLICAS=3
API_MAX_REPLICAS=10
API_TARGET_CPU=70
API_TARGET_MEMORY=80

CLIENT_MIN_REPLICAS=2
CLIENT_MAX_REPLICAS=6
CLIENT_TARGET_CPU=70
CLIENT_TARGET_MEMORY=80